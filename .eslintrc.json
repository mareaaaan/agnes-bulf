{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"airbnb-base",
		"plugin:vue/vue3-essential",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["vue"],
	"rules": {
		"indent": ["error", "tab"],
		"prettier/prettier": [
			//or whatever plugin that is causing the clash
			0,
			{
				"tabWidth": 4
			}
		]
	}
}
